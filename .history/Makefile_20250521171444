

NAME := philo

CC := cc
CFLAGS := -Wall -Wextra -Werror -MMD -MP
INC := -Iinclude

SRC := main.c

SRC_DIR := src
OBJ_DIR := obj

OBJ := $(SRC:%.c=$(OBJ_DIR)/%.o)
DEP := $(OBJ:.o=.d)

VPATH := $(SRC_DIR)

all: $(NAME)
./$(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(INC) -o $@ $^

# Compile object files
$(OBJ_DIR)/%.o: %.c
	@mkdir -p $(OBJ_DIR)
	$(CC) $(CFLAGS) $(INC) -c $< -o $@

clean:
	rm -rf $(OBJ_DIR)

fclean: clean
	rm -f $(NAME)

re: fclean all



.PHONY: all clean fclean re

-include $(DEP)